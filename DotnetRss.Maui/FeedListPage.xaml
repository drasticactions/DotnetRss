<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetRss.Maui.FeedListPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:DotnetRss.Maui">
    <local:BasePage.ToolbarItems>
        <ToolbarItem
            Order="Secondary" 
            Text="Open in New Window"
            x:Name="NewWindowButton"
            Clicked="NewWindowButton_Clicked"
            />
    </local:BasePage.ToolbarItems>
    <RefreshView RefreshColor="Green">
        <CollectionView  x:Name="FeedItemCollection"
                         SelectionMode="Single"
                         ItemTemplate="{StaticResource FeedTemplate}"
                         ItemsSource="{Binding FeedItems}">
        </CollectionView>
    </RefreshView>
</local:BasePage>
