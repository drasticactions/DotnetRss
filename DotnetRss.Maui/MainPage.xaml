<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DotnetRss.Maui"
             Title="DotnetRss"
             x:Class="DotnetRss.Maui.MainPage">
    <Grid RowDefinitions="*, Auto" RowSpacing="10">
        <RefreshView RefreshColor="Green">
            <CollectionView
                x:Name="FeedListItemCollection"
                SelectionMode="Single"
                ItemTemplate="{StaticResource FeedListTemplate}"
                ItemsSource="{Binding FeedListItems}">
            </CollectionView>
        </RefreshView>
        <Button Grid.Row="1" 
                    Margin="10"
                    Clicked="NewFeedButton_Clicked"
                    Text="Add New Feed"/>
    </Grid>
</local:BasePage>
