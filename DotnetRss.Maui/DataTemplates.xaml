<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetRss.Maui.DataTemplates">
    <DataTemplate x:Key="FeedListTemplate">
        <Grid Margin="5" ColumnSpacing="10" ColumnDefinitions="50, *">
            <Image VerticalOptions="Center" HeightRequest="50" Grid.Column="0" Source="{Binding ImageUri, Converter={StaticResource UrlImageConverter}}"/>
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                <Label FontAttributes="Bold" Text="{Binding Name}" />
                <Label MaxLines="2" Text="{Binding Description}" />
            </VerticalStackLayout>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="FeedTemplate">
        <Grid>
            <VerticalStackLayout Spacing="5">
                <Label FontSize="Caption" Text="{Binding PublishingDateString}"/>
                <Label FontSize="Title" Text="{Binding Title}"/>
                <Label MaxLines="3" TextType="Html" Text="{Binding Description}"/>
                <Label FontSize="Caption" Text="{Binding Author}"/>
            </VerticalStackLayout>
        </Grid>
    </DataTemplate>
</ResourceDictionary>